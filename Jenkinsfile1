pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs'
    }

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {

        stage("Clean Workspace") {
            steps {
                cleanWs()
            }
        }

        stage("Git Checkout") {
            steps {
                git 'https://github.com/akanksha106-code/Zomato.git'
            }
        }

        stage("Build Docker Image") {
            steps {
                sh "docker build -t akankshatech/zomatoapp:latest ."
            }
        }

        stage("Docker Push") {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-login',
                    usernameVariable: 'dockerhublogin',
                    passwordVariable: 'dockerhubpass'
                )]) {
                    sh """
                        echo ${dockerhubpass} | docker login -u ${dockerhublogin} --password-stdin
                        docker push akankshatech/zomatoapp:latest
                    """
                }
            }
        }

        stage("Terraform Deploy to AWS") {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'awslogin',
                    accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                    secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                ]]) {

                    dir('terraform-files') {
                        sh 'chmod 600 zomato-keypair.pem'
                        sh 'terraform init'
                        sh 'terraform validate'
                        sh 'terraform apply --auto-approve'
                    }
                }
            }
        }

        stage("Run Ansible Playbook") {
            steps {
                dir('terraform-files') {
                    ansiblePlaybook(
                        playbook: 'ansiblebook.yml',
                        inventory: 'inventory',
                        installation: 'ansible',
                        credentialsId: '2221ba55-8140-4edf-830c-9ebf62c978b8'
                    )
                }
            }
        }

    }
}
